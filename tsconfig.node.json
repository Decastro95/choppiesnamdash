{
  "compilerOptions": {
    "composite": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "target": "es2023",                       // ✅ valid
    "lib": ["es2023"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,       // ✅ works because noEmit=true
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "noEmit": true,                            // ✅ must be true for allowImportingTsExtensions

    /* Linting / strictness */
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["vite.config.ts", "src"]
}
